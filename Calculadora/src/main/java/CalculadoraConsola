    public String Operacion(String num1, String signo, String num2) {
        Double total = 0.0;
        String resultado;
        
        if (signo.equals("/")){
            total = Double.parseDouble(num1)/Double.parseDouble(num2);
        }
        if (signo.equals("X")){
            total = Double.parseDouble(num1)*Double.parseDouble(num2);
        }
        if (signo.equals("-")){
            total = Double.parseDouble(num1)-Double.parseDouble(num2);
        }
        if (signo.equals("+")){
            total = Double.parseDouble(num1)+Double.parseDouble(num2);
        }
        
       resultado = total.toString();
       return resultado;
    }
}
